#!/command/with-contenv bash
#shellcheck shell=bash

# shellcheck disable=SC1091
source /scripts/common

# sleep forever if UAT is not available
if [[ -z "$FR24KEY_UAT" ]]; then
  sleep infinity
fi

# don't start if the signup-uat.sh script is running
#while [[ -f /run/.pause-fr24feed ]]; do
#  sleep 1
#done

# wait a while so the adsb feeder instance is running
sleep 15

# Test fr24feed can run natively (without qemu)
if /usr/local/bin/fr24feed --version > /dev/null 2>&1; then
  # fr24feed can be run natively
  # shellcheck disable=SC2068,SC2154
  if chk_enabled "$VERBOSE_LOGGING"; then
    ${s6wrap[@]} /usr/local/bin/fr24feed --monitor-file=/dev/shm/uat-decoder.txt --http-listen-port=8755 --config-file=/etc/fr24uat-feed.ini --unit=fr24uat-feed | stdbuf -oL grep -v '\[feed\]'
  else
    ${s6wrap[@]} /usr/local/bin/fr24feed --monitor-file=/dev/shm/uat-decoder.txt --http-listen-port=8755 --config-file=/etc/fr24uat-feed.ini --unit=fr24uat-feed | stdbuf -oL grep -v '\[feed\]' | grep '\[stats\]'
  fi
else
  # fr24feed needs qemu
  # shellcheck disable=SC2068
  if chk_enabled "$VERBOSE_LOGGING"; then
    ${s6wrap[@]} qemu-arm-static /usr/local/bin/fr24feed --monitor-file=/dev/shm/uat-decoder.txt --http-listen-port=8755 --config-file=/etc/fr24uat-feed.ini --unit=fr24uat-feed | stdbuf -oL grep -v '\[feed\]'
  else
    ${s6wrap[@]} qemu-arm-static /usr/local/bin/fr24feed --monitor-file=/dev/shm/uat-decoder.txt --http-listen-port=8755 --config-file=/etc/fr24uat-feed.ini --unit=fr24uat-feed | stdbuf -oL grep -v '\[feed\]' | grep '\[stats\]'
  fi   
fi
